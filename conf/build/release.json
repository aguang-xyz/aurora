{
    "appId": "xyz.aguang.editor.aurora",
    "compression": "maximum",
    "asar": true,
    "asarUnpack": "node_modules/puppeteer/.local-chromium/**/*",
    "directories": {
        "buildResources": "resources"
    },
    "linux": {
        "category": "Productivity",
        "target": [
            "deb",
            "rpm"
        ]
    },
    "fileAssociations": [{
        "ext": "md",
        "description": "Markdown File",
        "mimeType": "text/markdown",
        "name": "Markdown File",
        "role": "Editor"
    }]
}
